{
  "name": "typescript-vite-application-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preserve": "vite build",
    "serve": "vite preview",
    "clean": "rm -rf dist/",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test --config=test/a11y/playwright.config.ts",
    "coverage": "vitest run --coverage",
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow ''",
    "check": "tsc --noEmit && npm run style:check && npm test && npm run test:e2e && npm run test:a11y"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.2.0",
    "@playwright/test": "^1.21.1",
    "@testing-library/dom": "^8.13.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "axe-playwright": "^1.1.11",
    "c8": "^7.11.2",
    "eslint": "^8.14.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.21.1",
    "prettier": "2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.0",
    "vitest": "^0.10.2"
  }
}
