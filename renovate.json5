{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "requiredStatusChecks": [
    "deploy-uat"
  ],
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "rangeStrategy": "bump",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "timezone": "Europe/Berlin",
  "automergeSchedule": [
    "before 5:30am every weekday",
    "after 7:30am every weekday"
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "groupName": "all frontend non-major dependencies",
      "groupSlug": "all-frontend-minor-patch",
      "matchPaths": [
        "frontend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "labels": [
        "frontend-updates"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "all backend non-major dependencies",
      "groupSlug": "all-backend-minor-patch",
      "matchPaths": [
        "backend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "labels": [
        "backend-updates"
      ],
      "automergeType": "pr"
    },
    {
      "packageNames": [
        "de.bund.digitalservice:neuris-juris-xml-export",
        "de.bund.digitalservice:neuris-caselaw-migration-schema"
      ],
      "automerge": false,
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major update"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "platformAutomerge": false,
      "automergeType": "pr"
    }
  ]
}
