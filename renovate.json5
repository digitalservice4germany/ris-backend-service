{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "requiredStatusChecks": [
    "deploy-uat"
  ],
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "platformAutomerge": false,
  "rangeStrategy": "bump",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "timezone": "Europe/Berlin",
  "automergeSchedule": [
    "before 5:30am every weekday",
    "after 7:30pm every weekday"
  ],
  "automergeType": "pr",
  "packageRules": [
    // FIXME: Remove this when vuetsc fix is released, see https://github.com/vuejs/language-tools/issues/5018
    {
      "matchPackageNames": ["typescript"],
      "allowedVersions": "5.6.x"
    },
    {
      "groupName": "all-frontend-non-major-dependencies",
      "matchPaths": [
        "frontend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "labels": [
        "frontend-updates"
      ],
      "automerge": true,
    },
    {
      "groupName": "all-backend-non-major-dependencies",
      "matchPaths": [
        "backend/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "labels": [
        "backend-updates"
      ],
    },
    {
      "packageNames": [
        "de.bund.digitalservice:neuris-juris-xml-export",
        "de.bund.digitalservice:neuris-caselaw-migration-schema"
      ],
      "automerge": false,
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major update"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
    }
  ]
}
