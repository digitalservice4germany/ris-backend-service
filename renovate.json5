{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "requiredStatusChecks": [
    "deploy-uat"
  ],
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "rangeStrategy": "bump",
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "timezone": "Europe/Berlin",
  "automergeSchedule": [
    "every weekday"
  ],
  "packageRules": [
    {
      "packageNames": [
        "de.bund.digitalservice:neuris-juris-xml-export",
        "de.bund.digitalservice:neuris-caselaw-migration-schema"
      ],
      "automerge": false,
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major update"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "platformAutomerge": false,
      "automergeType": "pr"
    }
  ]
}
